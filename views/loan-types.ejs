<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container">
        <%- include('./partials/sidebar.ejs') %>
        <main>
            <div class="loan">
                <div class="loan__form">
                    <h1 class="loan__title">Loan Type Form</h1>

                    <form class="loan__form__submit">     
                        <div class="loan__box">
                            <label for="type">Type:</label>
                            <input type="text" name="type" id="type" required>
                        </div>

                        <div class="loan__box">
                            <label for="description">Description:</label>
                            <input type="text" name="description" id="description" required>
                        </div>
                        
                        <button>Save</button>
                    </form>
                </div>


                <table class="loan__types">
                    <tr>
                        <th>#</th>
                        <th>Loan Type</th>
                        <th>Action</th>
                    </tr>
                    <% if (loanTypes.length > 0) { %>
                        <% loanTypes.forEach((lt,key) => { %>
                            <% const id = lt._id %>
                            <tr>
                                <td><%- key + 1 %></td>
                                <td style="display:flex; flex-direction:column">
                                    <span>Type Name: <%- lt.type %></span>
                                    <span>Description: <%- lt.description %></span>
                                </td>
                                <td>
                                    <button onclick="editLoanType('<%- lt._id %>')" class="loan__types__edit">Edit</button>
                                    <button class="loan__types__delete">Delete</button>
                                </td>
                            </tr>
                        <% }) %> 
                    <% } %>
                </table>  
            </div>
        </main>
    </div>
</body>

<script>
    const form = document.querySelector('.loan__form__submit');
    const edit = document.querySelector('.loan__types__edit');

    // Edit the data on click
    const editLoanType = async (id) => {
        console.log(id);
    }

    form.addEventListener('submit', async (e) => {
        e.preventDefault()

        console.log(loanTypes)

        const type = form.type.value
        const description = form.description.value
        
        try {
            const response = await fetch('/loan-types', {
                method: 'POST',
                body: JSON.stringify({ type, description }),
                headers: { 'Content-Type': 'application/json' }
            })
            const data = await response.json()
            if (data === 'ok') location.reload()
        } catch (error) {
            console.log(error)
        }
    })
</script>
</html>