<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container">
        <%- include('./partials/sidebar.ejs') %>
        <main>
            <!-- Popup Modal -->
            <div class="edit">
                <div class="edit__box">
                    <div class="edit__head">
                        <h1 class="edit__title">Update Loan</h1>
                        <svg class="edit__close" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
                            <path d="M310.6 361.4c12.5 12.5 12.5 32.75 0 45.25C304.4 412.9 296.2 416 288 416s-16.38-3.125-22.62-9.375L160 301.3L54.63 406.6C48.38 412.9 40.19 416 32 416S15.63 412.9 9.375 406.6c-12.5-12.5-12.5-32.75 0-45.25l105.4-105.4L9.375 150.6c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0L160 210.8l105.4-105.4c12.5-12.5 32.75-12.5 45.25 0s12.5 32.75 0 45.25l-105.4 105.4L310.6 361.4z"/>
                        </svg>
                    </div>

                    <form class="popup__update__loans">
                        <div>
                            <label for="type">Type Name:</label>
                            <input type="text" name="type" value="" id="update-type-text">
                        </div>
                        <div>
                            <label for="description">Description:</label>
                            <input type="text" name="description" value="" id="update-description-text">
                        </div>

                        <div>
                            <label for="amount">Max Loanable Amount:</label>
                            <input type="text" name="amount" value="" id="update-amount-text">
                        </div>

                        <div>
                            <label for="rate">Interest Rate:</label>
                            <input type="text" name="rate" value="" id="update-rate-text">
                        </div>
                        <button>Update</button>
                    </form>
                </div>
            </div>

            <div class="delete">
                <div class="delete__box">
                    <div class="delete__head">
                        <h1 class="delete__title">Delete Loan Type</h1>
                    </div>
                    <form class="popup__delete__loans">
                        <h2 class="ask__delete__title">Are you sure you want to delete this?</h2>
                        <div class="ask__buttons">
                            <button>Yes</button>
                            <span class="close__delete">No</span>
                        </div>
                    </form>
                </div>
            </div>
            <!-- End of Popup Modal -->
            <div class="loan">
                <div class="loan__form">
                    <h1 class="loan__title">Loan Type Form</h1>

                    <form class="loan__form__submit">     
                        <div class="loan__box">
                            <label for="type">Type:</label>
                            <input type="text" name="type" id="type" required>
                        </div>

                        <div class="loan__box">
                            <label for="description">Description:</label>
                            <input type="text" name="description" id="description" required>
                        </div>

                        <div class="loan__box">
                            <label for="amount">Maximum Loanable Amount:</label>
                            <input type="number" name="amount" id="amount" required>
                        </div>

                        <div class="loan__box">
                            <label for="rate">Interest Rate:</label>
                            <input type="number" name="rate" id="rate" required>
                        </div>
                        
                        <button>Save</button>
                    </form>
                </div>


                <table class="loan__types">
                    <tr>
                        <th>#</th>
                        <th>Loan Type</th>
                        <th>Action</th>
                    </tr>
                    <% if (loanTypes.length > 0) { %>
                        <% loanTypes.forEach((lt,key) => { %>
                            <% const id = lt._id %>
                            <tr>
                                <td><%- key + 1 %></td>
                                <td style="display:flex; flex-direction:column">
                                    <span>Type Name: <%- lt.type %></span>
                                    <span>Description: <%- lt.description %></span>
                                    <span>Max Loanable Amount: Php<%- lt.maxAmount %></span>
                                    <span>Interest Rate: <%- lt.interestRate %>%</span>
                                </td>
                                <td>
                                    <button 
                                        class="loan__types__edit" 
                                        data-editId="<%- lt._id %>" 
                                        data-type="<%- lt.type %>" 
                                        data-desc="<%- lt.description %>"
                                        data-amount="<%- lt.maxAmount %>" 
                                        data-rate="<%- lt.interestRate %>"
                                    >
                                        Edit
                                    </button>
                                    <button class="loan__types__delete" data-deleteId="<%- lt._id %>">Delete</button>
                                </td>
                            </tr>
                        <% }) %> 
                    <% } %>
                </table>  
            </div>
        </main>
    </div>
</body>

<script>
    const form = document.querySelector('.loan__form__submit');
    const editBtn = document.querySelectorAll('.loan__types__edit');
    const deleteBtn = document.querySelectorAll('.loan__types__delete');

    // popup
    const popupUpdate = document.querySelector('.edit');
    const popupDelete = document.querySelector('.delete');
    const closePopup = document.querySelector('.edit__close');
    
    const deleteForm = document.querySelector('.popup__delete__loans')
    const cancelDelete = document.querySelector('.close__delete');

    const editForm = document.querySelector('.popup__update__loans')

    // textbox for edit popup
    const typeBox = document.getElementById('update-type-text')
    const descriptionBox = document.getElementById('update-description-text')
    const amountBox = document.getElementById('update-amount-text')
    const rateBox = document.getElementById('update-rate-text')

    let currentIdSelection = '' 

    // Open popup delete
    deleteBtn.forEach(btn => {

        const id = btn.getAttribute('data-deleteId');
        btn.addEventListener('click', () => {
            currentIdSelection = id;
            popupDelete.style.display = 'flex';
        })
    })

    deleteForm.addEventListener('submit', async (e) => {
        e.preventDefault()

        try {
            const response = await fetch(`/loan-types/${currentIdSelection}`, {
                method: 'DELETE'
            })
            const data = await response.json()
            if (data === 'ok') location.reload()
        } catch (error) {
            console.log(error)
        }
    })
    
    // close delete popup
    cancelDelete.addEventListener('click',() => {
        popupDelete.style.display = 'none';
    })

    // Edit the data on click
    editBtn.forEach(btn => {
        btn.addEventListener('click', () => {
            currentIdSelection = btn.getAttribute('data-editId')
            typeBox.value = btn.getAttribute('data-type')
            descriptionBox.value = btn.getAttribute('data-desc')
            amountBox.value = btn.getAttribute('data-amount')
            rateBox.value = btn.getAttribute('data-rate')
            popupUpdate.style.display = 'flex';
        })
    })

    editForm.addEventListener('submit', async (e) => {
        e.preventDefault()
        
        const type = editForm.type.value
        const description = editForm.description.value
        const maxAmount = editForm.amount.value
        const interestRate = editForm.rate.value

        try {
            const response = await fetch(`/loan-types/${currentIdSelection}`, {
                method: 'PUT',
                body: JSON.stringify({ type, description, maxAmount, interestRate }),
                headers: { 'Content-Type': 'application/json' }
            })
            const data = await response.json()
            if (data === 'ok') location.reload()
        } catch (error) {
            console.log(error)
        }

    })
    
    closePopup.addEventListener('click',() => {
        popupUpdate.style.display = 'none'
    })

    form.addEventListener('submit', async (e) => {
        e.preventDefault()

        const type = form.type.value
        const description = form.description.value
        const maxAmount = form.amount.value
        const interestRate = form.rate.value
        
        try {
            const response = await fetch('/loan-types', {
                method: 'POST',
                body: JSON.stringify({ type, description, maxAmount, interestRate }),
                headers: { 'Content-Type': 'application/json' }
            })
            const data = await response.json()
            if (data === 'ok') location.reload()
        } catch (error) {
            console.log(error)
        }
    })
</script>
</html>