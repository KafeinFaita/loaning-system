<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container">
        <%- include('./partials/sidebar.ejs') %>
        <main>
            <!-- Popup -->

            <div class="edit">
                <div class="edit__box">
                    <div class="edit__head">
                        <h1 class="edit__title">Update Loan Plan</h1>
                        <svg class="edit__close" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
                            <path d="M310.6 361.4c12.5 12.5 12.5 32.75 0 45.25C304.4 412.9 296.2 416 288 416s-16.38-3.125-22.62-9.375L160 301.3L54.63 406.6C48.38 412.9 40.19 416 32 416S15.63 412.9 9.375 406.6c-12.5-12.5-12.5-32.75 0-45.25l105.4-105.4L9.375 150.6c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0L160 210.8l105.4-105.4c12.5-12.5 32.75-12.5 45.25 0s12.5 32.75 0 45.25l-105.4 105.4L310.6 361.4z"/>
                        </svg>
                    </div>

                    <form class="popup__update__loans">
                        <div>
                            <label for="plan">Plan (months):</label>
                            <input type="number" name="plan" value="" id="edit-plan">
                        </div>
                        <div>
                            <label for="interest">Interest:</label>
                            <input type="number" name="interest" value="" id="edit-interest">
                        </div>
                        <div>
                            <label for="due_penalty">Monthly Over due's Penalty:</label>
                            <input type="text" name="due_penalty" value="" id="edit-penalty">
                        </div>
                        <button>Update</button>
                    </form>
                </div>
            </div>

            <div class="delete">
                <div class="delete__box">
                    <div class="delete__head">
                        <h1 class="delete__title">Delete Plan</h1>
                    </div>
                    <form class="popup__delete__loans">
                        <h2 class="ask__delete__title">Are you sure you want to delete this?</h2>
                        <div class="ask__buttons">
                            <button>Yes</button>
                            <span class="close__delete">No</span>
                        </div>
                    </form>
                </div>
            </div>
            <div class="create__loan__type">
                <div class="loan__form">
                    <div class="loan__form__header">
                        <h1 class="borrower__title">New Loan Plan</h1>
                        <svg class="loan__form__close" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
                            <path d="M310.6 361.4c12.5 12.5 12.5 32.75 0 45.25C304.4 412.9 296.2 416 288 416s-16.38-3.125-22.62-9.375L160 301.3L54.63 406.6C48.38 412.9 40.19 416 32 416S15.63 412.9 9.375 406.6c-12.5-12.5-12.5-32.75 0-45.25l105.4-105.4L9.375 150.6c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0L160 210.8l105.4-105.4c12.5-12.5 32.75-12.5 45.25 0s12.5 32.75 0 45.25l-105.4 105.4L310.6 361.4z"/>
                        </svg>
                    </div>
                    <form class="loan__form__submit">     
                        <div class="loan__box">
                            <label for="type">Plan (months):</label>
                            <input type="number" name="plan" id="plan" min="1" max="12" placeholder="1-12" required>
                        </div>
    
                        <div class="loan__box">
                            <label for="description">Interest:</label>
                            <input type="number" name="interest" id="interest" min="1" max="100" placeholder="%" required>
                        </div>
    
                        <div class="loan__box">
                            <label for="description">Monthly Over due's Penalty:</label>
                            <input type="number" name="penalty" id="penalty" min="1" max="100" placeholder="%" required>
                        </div>
                        
                        <button>Save</button>
                    </form>
                </div>
            </div>
            <!-- end of popup -->
            <div class="borrower__header">
                <h1 class="borrower__title">Loan Plan</h1>
                <button class="borrower__add__borrower"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M432 256c0 17.69-14.33 32.01-32 32.01H256v144c0 17.69-14.33 31.99-32 31.99s-32-14.3-32-31.99v-144H48c-17.67 0-32-14.32-32-32.01s14.33-31.99 32-31.99H192v-144c0-17.69 14.33-32.01 32-32.01s32 14.32 32 32.01v144h144C417.7 224 432 238.3 432 256z"/></svg>New Loan Plan</button>
            </div>
            <!-- Pagination Control -->
            <%- include('./partials/pagination.ejs') %>
            <div class="loan">
                <div class="borrower__filter">
                    <div class="borrower__entries">
                        <h2 class="borrower__entries__show">
                            Show
                            <select>
                                <option value="1">1</option>
                            </select>
                            entries 
                        </h2>
                    </div>
                    <form class="borrower__search__form">
                        <label for="search">Search:</label>
                        <input type="text" id="search" placeholder="Search..." required>
                    </form>
                </div> 
                <table class="loan__types">
                    <tr>
                        <th>#</th>
                        <th>Plan</th>
                        <th>Action</th>
                    </tr>

                    <% if (loanPlans.length > 0) { %>
                        <% loanPlans.forEach((lp, key) => { %>
                            <tr>
                                <td><%- key + 1 %></td>
                                <td style="display:flex; flex-direction:column">
                                    <span>Years/Months: <%- lp.yearsMonths %>%</span>
                                    <span>Interest: <%- lp.interest %>%</span>
                                    <span>Over due penalty: <%- lp.overduePenalty %>%</span>
                                </td>
                                <td>
                                    <button class="loan__types__edit" data-id="<%- lp.id %>" data-years="<%- lp.yearsMonths %>" data-interest="<%- lp.interest %>" data-penalty="<%- lp.overduePenalty %>">Edit</button>
                                    <button class="loan__types__delete" data-id="<%- lp.id %>">Delete</button>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </table>  
            </div>
        </main>
    </div>

    <script>

        let currentIdSelection = ''

        //DELETE

        const openDeleteModalBtns = document.querySelectorAll('.loan__types__delete');
        const deleteModal = document.querySelector('.delete');
        const closeDeleteModalBtn = document.querySelector('.close__delete');
        const deleteForm = document.querySelector('.popup__delete__loans');

        openDeleteModalBtns.forEach(btn => {
            const id = btn.getAttribute('data-id')
            btn.addEventListener('click', () => {
                currentIdSelection = id
                deleteModal.style.display = 'flex';
            });
        });

        closeDeleteModalBtn.addEventListener('click', () => {
            deleteModal.style.display = 'none';
        });

        deleteForm.addEventListener('submit', async e => {
            e.preventDefault()

            try {
                const response = await fetch(`/loan-plans/${currentIdSelection}`, {
                    method: 'DELETE'
                })
                const data = await response.json()
                if (data === 'ok') location.reload()
            } catch (error) {
                console.log(error)
            }
        })

        // EDIT
        const closeEditModalBtn = document.querySelector('.edit__close');
        const editModal = document.querySelector('.edit');
        const openEditModalBtns = document.querySelectorAll('.loan__types__edit');
        const editForm = document.querySelector('.popup__update__loans')

        const planBox = document.getElementById('edit-plan')
        const interestBox = document.getElementById('edit-interest')
        const penaltyBox = document.getElementById('edit-penalty')
        
        openEditModalBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                currentIdSelection = btn.getAttribute('data-id')
                planBox.value = btn.getAttribute('data-years')
                interestBox.value = btn.getAttribute('data-interest')
                penaltyBox.value = btn.getAttribute('data-penalty')
                editModal.style.display = 'flex';
            })
        })
        closeEditModalBtn.addEventListener('click',() => {
            editModal.style.display = 'none';
        });

        editForm.addEventListener('submit', async (e) => {
            e.preventDefault()

            console.log(currentIdSelection)

            const plan = editForm.plan.value
            const interest = editForm.interest.value
            const duePenalty = editForm.due_penalty.value

            try {
                const response = await fetch(`/loan-plans/${currentIdSelection}`, {
                    method: 'PUT',
                    body: JSON.stringify({ plan, interest, penalty: duePenalty }),
                    headers: { 'Content-Type': 'application/json' }
                })
                const data = await response.json()
                if (data === 'ok') location.reload() 
            } catch (error) {
                console.log(error)
            }

        })

        // LOAN PLAN FORM
        const openLoanPlanBtn = document.querySelector('.borrower__add__borrower');
        const closeLoanPlanBtn = document.querySelector('.loan__form__close');
        const loanPlanForm = document.querySelector('.create__loan__type');
        const form = document.querySelector('.loan__form__submit')

        openLoanPlanBtn.addEventListener('click', () => {
            loanPlanForm.style.display = 'flex';
        })
        closeLoanPlanBtn.addEventListener('click', () => {
            loanPlanForm.style.display = 'none';
        })

        form.addEventListener('submit', async (e) => {
            e.preventDefault()

            const plan = form.plan.value
            const interest = form.interest.value
            const penalty = form.penalty.value
            
            try {
                const response = await fetch('/loan-plans', {
                    method: 'POST',
                    body: JSON.stringify({ plan, interest, penalty }),
                    headers: { 'Content-Type': 'application/json' }
                })
                const data = await response.json()
                if (data === 'ok') location.reload()
            } catch (error) {
                console.log(error)
            }
        })

    </script>

</body>
</html>